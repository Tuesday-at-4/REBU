<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorDashboard" prefHeight="350.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="github.Tuesday_at_4.REBU.DashboardController">
   <children>
      <Button fx:id="btnDashboardDriver" layoutX="25.0" layoutY="150.0" minHeight="50.0" minWidth="150.0" mnemonicParsing="false" onAction="#handleDriverButton" text="Driver">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnDashboardPassenger" layoutX="25.0" layoutY="58.0" minHeight="50.0" minWidth="150.0" mnemonicParsing="false" onAction="#handlePassengerButton" text="Passenger">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnMyAccount" layoutX="25.0" layoutY="248.0" minHeight="50.0" minWidth="150.0" mnemonicParsing="false" onAction="#handleAccountButton" text="My Account">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label fx:id="lblWelcome" layoutX="227.0" layoutY="37.0" text="Welcome to REBU!" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label layoutX="224.0" layoutY="96.0" text="News Feed" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="button_logout" layoutX="530.0" layoutY="311.0" mnemonicParsing="false" onMouseClicked="#logout" text="Logout" />
      <TextArea fx:id="textAreaDashboard" editable="true" layoutX="224.0" layoutY="123.0" prefHeight="161.0" prefWidth="313.0" promptText="No notifications for now." />
   </children>
</AnchorPane>
